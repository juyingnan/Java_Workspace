                <bpel:correlation set="CorrelationSet" initiate="no"></bpel:correlation>
            </bpel:correlations>
        </bpel:receive>
        <bpel:assign validate="no" name="Assign1">
            <bpel:copy>
                <bpel:from>
                    
                    
                    <![CDATA[$i + $i]]>
                </bpel:from>
                <bpel:to variable="i"></bpel:to>
            </bpel:copy>
        </bpel:assign>
        <bpel:assign validate="no" name="Assign2">
            <bpel:copy>
                <bpel:from><bpel:literal><tns:Async_TestResponse xmlns:tns="ss.pku.edu.cn" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
